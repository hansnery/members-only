<div class="column">
  <nav class="panel">
    <p class="panel-heading">Latest Gossip</p>
  </nav>
  <div class="panel-block">
    <article class="media">
      <div class="media-left">
        <figure class="image is-32x32">
          <% if user_signed_in? %>
            <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
          <% else %>
            <img src="https://bulma.io/images/placeholders/64x64.png">
          <% end %>
        </figure>
      </div>
      <div class="media-content">
        <p>
          <% if @posts.size > 0 %>
            <% if user_signed_in? %>
              <p>
                <strong><%= @posts.first.user.name %></strong>
                <small><em>@<%= @posts.first.user.username %></em></small>
              </p>
            <% else %> 
              <p>
                <strong><em>Anonymous</em></strong><br/>  
              </p>
            <% end %>
            <p>
              <%= @posts.first.body %>
            </p>
          <% else %>
            <strong> We haven't heard anything yet.</strong>
          <% end %>
        </p>
      </div>
    </article>
  </div>
</div>