<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :body, label: "Tell us everything!", input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "You will never guess what I just heard..." %>
  </div>
</div>
<%= f.button :submit, class: "button is-danger", value: "Spread Gossip" %>
<% end %>